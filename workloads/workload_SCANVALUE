
# scan value only

recordcount=1000
operationcount=100
workload=core

insertorder=ordered

readallfields=true

# what is the minimum number of records to scan
minscanlength=1
# On a single scan, the maximum number of records to access
maxscanlength=1000

requestdistribution=sequential

readproportion=0
updateproportion=0
scanproportion=0
insertproportion=0
scanvalueproportion=1

# 是否建立索引
hasIndex=false

# 是否在操作完成后删除所有索引
dropIndex=false
# 是否在操作完成后删除所有db
dropDatabase=false

# mongodb索引列
# 只有当 hasIndex 为true的时候，这个配置项才生效，它将会创建一个复合索引，
# 比如配置为：field0,field1,field2，则下述三种查询都将通过索引进行查询：
# - field0,field1,field2
# - field0,field1
# - field0
mongodb.indexs=field0,field1,field2
couchbase.indexs=field0,field1,field2
couchdb.indexs=field0,field1,field2

# couchbase的内存使用
couchbase_memory=16384